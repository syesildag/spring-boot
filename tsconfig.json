{
  "compileOnSave": true,
  "buildOnSave": true,
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "removeComments": true,
    "moduleResolution":"node",
    "incremental": true,
    "tsBuildInfoFile":"."
  },
  "include": [
    "./src/main/webapp/resources/typescript/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
